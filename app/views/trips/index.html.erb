<div class="row">
    <div class="d-flex align-items-center gap-2">
        <h2 >Tous les Voyages</h2>
        <%= link_to '+ Créer', new_trip_path, class: 'btn btn-primary ml-2' %>
    </div>
    <div class="col-md-12">
        <div class="container-fluid text-center my-5">
            <% if @trips.empty? %>
                <h3 class="text-center">Aucun voyage pour le moment</h3>
            <% else %>
                <div class="row g-4">
                    <% @trips.each do |trip| %>
                        <div class="col-md-3 d-flex justify-content-center">
                            <div class="card text-center" style="width: 18rem;">
                                <h5 class="card-header">
                                    <%= trip.user.name %>
                                </h5>
                                <%= image_tag 'city.jpg', class: 'card-img-top', alt: 'Random City' %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= trip.destination %></h5>
                                    <p class="card-text"><%= trip.description %></p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Départ: <%= l(trip.start_date) %></li>
                                    <li class="list-group-item">Retour: <%= l(trip.end_date) %></li>
                                </ul>
                                <div class="card-footer text-body-secondary d-flex justify-content-end">
                                    <%= form_with url: "/api/trips/destroy_ajax/#{trip.id}", method: :delete, class: 'd-inline ms-2' do %>
                                        <%= button_tag type: 'submit', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                                            <i class="bi bi-trash-fill"></i>
                                        <% end %>
                                    <% end %>
                                    <%= link_to edit_trip_path(trip), class: 'btn btn-success ms-2' do %>
                                    <i class="bi bi-pencil-fill light"></i>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>