<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Modifier le Voyage n°<%= @trip.id %></h2>
        <%= form_with model: @trip, url: "/api/trips/update_ajax/#{@trip.id}", method: :put, local: true, class: 'row g-3 mt-2' do |form| %>
            <div class="form-floating mb-2">
                <%= form.text_field :destination, required: true, class: 'form-control', id: 'destination', placeholder: '' %>
                <%= form.label :destination, 'Destination', class: 'form-label' %>
            </div>

            <div class="form-floating mb-2">
                <%= form.text_field :description, required: true, class: 'form-control', id: 'description', placeholder: '' %>
                <%= form.label :description, 'Description', class: 'form-label' %>
            </div>

            <div class="form-floating mb-2">
                <%= form.date_field :start_date, required: true, class: 'form-control', id: 'start_date' %>
                <%= form.label :start_date, 'Date de départ', class: 'form-label' %>
            </div>

            <div class="form-floating mb-2">
                <%= form.date_field :end_date, required: true, class: 'form-control', id: 'end_date' %>
                <%= form.label :end_date, 'Date de retour', class: 'form-label' %>
            </div>

            <div class="form-floating mb-2">
                <%= form.select :user_id, options_for_select(@users.map { |u| [u["name"], u["id"]] }), { prompt: 'Choisir un utilisateur' }, { required: true, class: 'form-select', id: 'user_id' } %>
                <%= form.label :user_id, 'Utilisateur', class: 'form-label' %>
            </div>

            <%= form.submit 'Modifier', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>