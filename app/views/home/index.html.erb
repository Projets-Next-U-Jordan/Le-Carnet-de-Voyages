<div class="row">
    <div class="col-md-12">
        <h2 class="d-flex align-items-center">Tous les Voyages</h2>
        <div class="container-fluid text-center my-5">
            <div class="row g-2">
                <% @trips.each do |trip| %>
                    <div class="col-md-6 d-flex justify-content-center">
                        <div class="card text-center" style="width: 18rem;">
                            <h5 class="card-header">
                                <%= trip.user.name %>
                            </h5>
                            <%= image_tag 'city.jpg', class: 'card-img-top', alt: 'Random City' %>
                            <div class="card-body">
                                <h5 class="card-title"><%= trip.destination %></h5>
                                <p class="card-text"><%= trip.description %></p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">DÃ©part: <%= l(trip.start_date) %></li>
                                <li class="list-group-item">Retour: <%= l(trip.end_date) %></li>
                            </ul>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>