<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Créer un Utilisateur</h2>
        <%= form_with model: @user, url: '/api/users/create_ajax', method: :post, local: true, class: 'row g-3 mt-2' do |form| %>
        <div class="form-floating mb-2">
            <%= form.text_field :name, required: true, class: 'form-control', id: 'name', placeholder: '' %>
            <%= form.label :name, 'Nom', class: 'form-label' %>
        </div>

        <div class="form-floating mb-2">
            <%= form.text_field :email, required: true, class: 'form-control', id: 'email', placeholder: '' %>
            <%= form.label :email, 'EMail', class: 'form-label' %>
        </div>
        <%= form.submit 'Créer', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>